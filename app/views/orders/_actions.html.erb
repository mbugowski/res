<% if @order.status == "created" %>
  <%= form_for(@order, url: pay_order_path(@order), method: :post) do |f| %>
    <%= f.submit "Pay for order" %>
  <% end %>
<% end %>
<% if @order.status == "paid" %>
  <%= form_for(@delivery) do |f| %>
    Delivery number: <%= f.text_field :number %>
    <%= f.submit "Add confirm delivery with number" %>
  <% end %>
<% end %>

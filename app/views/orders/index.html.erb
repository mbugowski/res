<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Customer</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.uid, order %></td>
        <td><%= order.customer %></td>
        <td><%= order.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

